<appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
	<file>/var/log/milter4j/milter.log</file>
	<append>true</append>
	<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
		<fileNamePattern>/var/log/milter4j/%d.milter.log.gz</fileNamePattern>
	</rollingPolicy>
	<layout class="ch.qos.logback.classic.PatternLayout">
		<pattern>%date{yyyy-MM-dd HH:mm:ss.SSS} %level [%thread, %file:%line] - %message%n</pattern>
	</layout>
</appender>

<root>
	<level value="INFO" />
	<appender-ref ref="FILE" />
</root>

<logger name="de.ovgu.cs.milter4j"><level value="INFO"/></logger>
<logger name="de.ovgu.cs.milter4j.jmx"><level value="DEBUG"/></logger>
</configuration>